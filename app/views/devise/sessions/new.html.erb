<div class="container">
  <div class="row align-items-center">
    <div class="col-6 mx-auto">
      <div class="jumbotron">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <h3 class="mr-auto">Login</h3>
        <p class="mb-5 mr-auto text-muted">Please do enter valid E-mail Id and Password.</p>

        <div class="row">
          <div class="col-sm-8">
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
            </div>
          </div>

          <div class="col-sm-8">
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password" %>
            </div>
          </div>


        </div>

        <div class="form-group">
          <button class="btn btn-primary submit-btn">LOGIN</button>
        </div>
        <%= link_to  "Register here", new_doner_registration_path, method: :get, class:"mt-5 mb-3 text-muted" %>
        <% end %>
      </div>
    </div>
  </div>
</div>