<%= form_with(model: food, local: true) do |f| %>
<% if food.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(food.errors.count, "error") %> prohibited this request from being saved:</h2>

  <ul>
    <% food.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Contact person name" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class:"form-control", placeholder:"Phone number" %>
    </div>
  </div>

  <div class="col-sm-12">
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>

  </div>
  <div class="col-sm-12">
    <div class="form-group">
      <%= f.text_field :address, autofocus: true, autocomplete: "address", class:"form-control", placeholder:"Enter full address" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <%= f.text_area :description, autofocus: true, autocomplete: "description", class:"form-control", placeholder:"Enter description" %>
    </div>
  </div>
</div>
<%= f.hidden_field :user_id, value: current_user.id %>


<div class="form-group">
  <button class="btn btn-primary submit-btn">Submit</button>
</div>

<% end %>